<tr>
    <th scope="row">
        <a href="/people/<%= card.name %>">
            <img
                class="img-thumbnail object-fit-cover"
                src="<%= card.picture %>"
                alt="<%= card.name %>"
                width="100"
                height="100"
        /></a>
    </th>

    <td><a href="/people/<%= card.name %>"><%= card.name %></a></td>

    <td>
        <%= new Date(card.birth_date).getFullYear().toString().padStart(4) %>
        <%= card.born_bc ? 'BC' :'AD' %>
    </td>
    <td><%= card.alive %></td>
    <td><%= card.field %></td>
</tr>
